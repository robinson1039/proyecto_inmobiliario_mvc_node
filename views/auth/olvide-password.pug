extends ../layout/index

block contenido

    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices 
        h2.text-center.text-2xl.font-extrabold #{pagina}
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.p-2.mb-1.font-bold=error.msg
        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow.rounded-md
                form.space-y-5(method="POST" action="/auth/olvide-password")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for='email') email de resistro  
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Tu email' type='email' name='email')
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") Ya tienes cuenta? 
                        a.text-gray-500.text-xs(href="/auth/registro") Registrate 
                    input(class='w-full bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 cursor-pointer rounded-md' type="submit" value='Enviar instrucciones')